        </ImageView>
        <ImageView fitHeight="25.0" fitWidth="20.0" layoutX="234.0" layoutY="643.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@../../assets/buttons/market_btn.png"/>
