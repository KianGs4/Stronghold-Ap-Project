<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPane" prefHeight="728.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MapMenus.MapCreationMenu.MapCreationInitial">
    <ImageView fitHeight="708.0" fitWidth="553.0" layoutX="316.0" layoutY="-42.0" nodeOrientation="INHERIT"
               pickOnBounds="true" preserveRatio="true" translateX="48" translateY="73">
        <Image url="@../../assets/backgrounds/mapSelect.png"/>
    </ImageView>
    <TextField fx:id="mapIdField" layoutX="561.0" layoutY="368.0" opacity="0.5" prefHeight="30.0" prefWidth="230.0"
               promptText="choose map name" scaleShape="false"
               style="-fx-background-color: #3a1a03; -fx-text-fill: white; -fx-border-radius: 0; -fx-background-radius: 0;"/>
    <TextField fx:id="PlayerNumberField" layoutX="561.0" layoutY="407.0" opacity="0.5" prefHeight="30.0"
               prefWidth="230.0" promptText="choose number of players" scaleShape="false"
               style="-fx-background-color: #3a1a03; -fx-text-fill: white; -fx-border-radius: 0; -fx-background-radius: 0;"/>
    <TextField fx:id="mapX" layoutX="560.0" layoutY="444.0" opacity="0.5" prefHeight="30.0" prefWidth="108.0"
               promptText="choose map x" scaleShape="false"
               style="-fx-background-color: #3a1a03; -fx-text-fill: white; -fx-border-radius: 0; -fx-background-radius: 0;"/>
    <TextField fx:id="mapY" layoutX="675.0" layoutY="444.0" opacity="0.5" prefHeight="30.0" prefWidth="116.0"
               promptText="choose map y" scaleShape="false"
               style="-fx-background-color: #3a1a03; -fx-text-fill: white; -fx-border-radius: 0; -fx-background-radius: 0;"/>
    <Label layoutX="461.0" layoutY="347.0" prefHeight="74.0" prefWidth="79.0" text="Map Name" textFill="WHITE"
           wrapText="true">
        <font>
            <Font name="Arial Black" size="13.0"/>
        </font>
    </Label>
    <ImageView fitHeight="30" fitWidth="210.0" layoutX="474.0" layoutY="420.0" nodeOrientation="INHERIT"
               onMouseClicked="#createMap" pickOnBounds="true" translateX="48" translateY="73">
        <Image url="@../../assets/buttons/createMap_btn.jpg"/>
    </ImageView>
    <ImageView fitHeight="30" fitWidth="210.0" layoutX="474.0" layoutY="455.0" nodeOrientation="INHERIT"
               onMouseClicked="#goToMapManager" pickOnBounds="true" translateX="48" translateY="73">
        <Image url="@../../assets/buttons/chatManager_btn.jpg"/>
    </ImageView>
    <ImageView fitHeight="30" fitWidth="210.0" layoutX="473.0" layoutY="490.0" nodeOrientation="INHERIT"
               onMouseClicked="#back" pickOnBounds="true" translateX="48" translateY="73">
        <Image url="@../../assets/buttons/back_btn.jpg"/>
    </ImageView>
    <Label layoutX="462.0" layoutY="384.0" prefHeight="74.0" prefWidth="79.0" text="Player Number" textFill="WHITE"
           wrapText="true">
        <font>
            <Font name="Arial Black" size="13.0"/>
        </font>
    </Label>
    <Label layoutX="463.0" layoutY="425.0" prefHeight="74.0" prefWidth="79.0" text="Map Size" textFill="WHITE"
           wrapText="true">
        <font>
            <Font name="Arial Black" size="13.0"/>
        </font>
    </Label>
    <Label fx:id="errorMessageText" alignment="CENTER" contentDisplay="CENTER" layoutX="493.0" layoutY="339.0"
           prefHeight="17.0" prefWidth="279.0" textAlignment="CENTER" textFill="RED"/>
</AnchorPane>
